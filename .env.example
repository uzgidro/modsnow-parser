# Application Settings
DEBUG=False
APP_NAME=OCR Image Processing API
VERSION=1.0.0

# OCR Settings
OCR_GPU_ENABLED=False
OCR_LANGUAGES=["en"]
MAX_CONCURRENT_OCR=4

# OCR Cleanup Options
OCR_PARAGRAPH_MODE=False        # True: merge lines with spaces | False: preserve line breaks
OCR_MIN_CONFIDENCE=0.0          # Filter low-confidence text (0.0-1.0, e.g., 0.5 = 50%)
OCR_STRIP_WHITESPACE=True       # Remove leading/trailing whitespace
OCR_REMOVE_EMPTY_LINES=True     # Remove empty lines from output

# OCR Performance Options
OCR_MAX_IMAGE_SIZE=1920         # Resize images wider than this (0 = no resize). Lower = faster
OCR_BATCH_SIZE=5                # Batch size for EasyOCR

# File Processing
MAX_UPLOAD_SIZE=104857600
MAX_ARCHIVE_SIZE=524288000
MAX_IMAGES_PER_REQUEST=50
TEMP_DIR=./temp
